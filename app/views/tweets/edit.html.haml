= render "layouts/header"
.container
  = form_with(model: @tweet, local: true) do |form|
    %h3
      編集する
    = form.text_field :name, placeholder: "Nickname",class: "edit-name edit-form"
    = form.text_field :image, placeholder: "Image Url",class:"edit-image edit-form"
    = form.text_area :text, placeholder: "text" , rows: "10",class:"edit-text edit-form";
    = form.submit "SEND", class:"edit-btn edit-form"
= render "layouts/footer"