.new
  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    %h2 NyankoBB
    = render "devise/shared/error_messages", resource: resource
    .field
      = f.text_field :nickname, autofocus: true,placeholder:"ニックネーム",class: "form"
    .field
      = f.email_field :email, autofocus: true, autocomplete: "email",placeholder:"メールアドレス",class: "form"
    .field
      = f.password_field :password, autocomplete: "new-password",placeholder:"パスワード",class: "form"
    .field
      = f.password_field :password_confirmation, autocomplete: "new-password",placeholder:"パスワード確認",class: "form"
    .actions
      = f.submit "Sign up",class: "btn"
      = render "users/shared/links"
